{
  "extends": [
    "airbnb-base",
    "prettier",
    "plugin:prettier/recommended",
    "plugin:jest/recommended"
  ],
  "env": {
    "es6": true,
    "browser": true,
    "jest": true
  },
  "parserOptions": { "ecmaVersion": 2017 },
  "plugins": ["prettier", "jest"],
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "singleQuote": true,
        "trailingComma": "all"
      }
    ],
    "no-plusplus": "off"
  }
}
